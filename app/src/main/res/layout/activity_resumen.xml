<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ResumenActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_resumen"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:elevation="4dp"
        app:title="Resumen"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back" />

    <!-- Contenido con Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 游댯 Gr치fico Circular primero -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distribuci칩n de Gastos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <FrameLayout
                        android:id="@+id/container_grafico_circular"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_placeholder_circular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Gr치fico Circular\n(Ingresos vs Egresos)"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:visibility="gone"
                            android:alpha="0.7" />

                        <WebView
                            android:id="@+id/webview_pie_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>
                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 游늵 Resumen financiero -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resumen Financiero"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresos"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_total_ingresos_resumen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 0.00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Egresos"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_total_egresos_resumen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 0.00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FF5722" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:alpha="0.3"
                        android:layout_marginVertical="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_balance_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 0.00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 游늳 Gr치fico de Barras -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Evoluci칩n Mensual"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Selector de mes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <ImageButton
                            android:id="@+id/btn_mes_anterior"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_chevron_left"
                            android:contentDescription="Mes anterior"
                            app:tint="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_mes_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Junio 2025"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:layout_marginHorizontal="16dp"
                            android:minWidth="120dp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground" />

                        <ImageButton
                            android:id="@+id/btn_mes_siguiente"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/right"
                            android:contentDescription="Mes siguiente"
                            app:tint="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Gr치fico de barras -->
                    <FrameLayout
                        android:id="@+id/container_grafico_barras"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_placeholder_barras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Gr치fico de Barras\n(Evoluci칩n Mensual)"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:visibility="gone"
                            android:alpha="0.7" />

                        <WebView
                            android:id="@+id/webview_bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />
                    </FrameLayout>

                    <!-- Leyenda -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Ingresos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="24dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="#4CAF50"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <!-- Egresos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="#FF5722"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Egresos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Men칰 inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/menu_navigation"
        app:itemIconTint="@color/nav_item_color_selector"
        app:itemTextColor="@color/nav_item_color_selector"
        app:labelVisibilityMode="labeled" />
</LinearLayout>
